generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// app schema

model Category {
  id        String     @id @default(uuid())
  name      String     @unique
  medicines Medicine[]

  @@map("categories")
}

model Medicine {
  id           String    @id @default(uuid())
  isBanned     Boolean   @default(false)
  isFeatured   Boolean   @default(false)
  userId       String
  // user User @relation(fields:[userId], references: [id], onDelete: Cascade)
  name         String
  descriptions String
  categoryId   String?
  category     Category? @relation(fields: [categoryId], references: [id])
  reviews      Review[]
  carts        Cart[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("medicines")
}

model Review {
  id         String   @id @default(uuid())
  medicineId String
  medicine   Medicine @relation(fields: [medicineId], references: [id], onDelete: Cascade)
  content    String
  rating     Int
  userId     String
  // user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("reviews")
}

model Cart {
  id         String    @id @default(uuid())
  userId     String
  // user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  medicineId String?
  medicine   Medicine? @relation(fields: [medicineId], references: [id])
  quantity   Int
  orderId    String
  order      Order     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("carts")
}

model Order {
  id         String      @id @default(uuid())
  customerId String
  // customer User @relation("customerOrders",fields: [customerId], references: [id], onDelete: Cascade)
  sellerId   String
  // seller User @relation("sellerOrders", fields: [customerId], references: [id], onDelete: Cascade)
  status     OrderStatus
  carts      Cart[]

  @@map("orders")
}

enum OrderStatus {
  PROCESSING
  SHIPPED
  DELIVERED
  CANCELLED
}
